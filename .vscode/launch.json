    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "preLaunchTask": "Run on Python",
            "name": "Firefox with python",
            "url": "localhost:8000",
            "webRoot": "${workspaceFolder}"
        },

        {
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "Deploy to server",
            "name": "Chrome with inetpub",
            "url": "http://localhost"
        }
    ]
}